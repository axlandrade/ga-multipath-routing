{
    "name": "Otimização de Redes Ad Hoc",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "forwardPorts": [
        8888
    ],
    // --- MUDANÇA PRINCIPAL ---
    // A linha "postCreateCommand" foi removida.
    // A instalação de pacotes já é feita no Dockerfile durante o build da imagem.
    // Isso torna a criação do contêiner mais rápida e limpa.
    "remoteUser": "root"
}